<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Finish">


    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#4CAF50">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FINISH"
            android:textSize="26sp"
            android:layout_marginLeft="10sp"
            android:textColor="#fff"
            android:layout_marginTop="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="80dp"
         android:layout_marginLeft="10sp"
         android:layout_marginRight="10sp">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:src="@drawable/ok"/>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:gravity="center"
             android:textColor="#4CAF50"
             android:textSize="20sp"
             android:text="Urangije ikiciro cy'amashuri y'incuke,Turizerako mwungutse ibishya byinshi,"/>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             android:gravity="center"
             android:textColor="#000"
             android:textSize="20sp"
             android:text="Ushobora gutangire ikiciro cy'amashuri abanza."/>


     </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:text="Congratulations !!!, you have completed the courses and we hope you learned something new,"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Now you can start Primary school."/>
    </LinearLayout>

</RelativeLayout>